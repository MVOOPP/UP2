<Page x:Class="UCHET.Pages.Status.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UCHET.Pages.Status"
                mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid>
        <Grid>
            <ScrollViewer Margin="5,5,5,40">
                <StackPanel x:Name="parent">

                </StackPanel>
            </ScrollViewer>
            <TextBox x:Name="tbSearch" KeyUp="SearchStatus" Height="25" Margin="20,0,98,10" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom"/>
            <Button x:Name="Add" Click="AddRecord"  Content="Добавить" Height="25" Margin="0,0,5,10"  Background="#0060AC" Foreground="White" BorderBrush="Black"  VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="89" />
        </Grid>
    </Grid>
