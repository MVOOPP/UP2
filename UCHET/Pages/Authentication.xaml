<Page x:Class="UCHET.Pages.Authentication"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UCHET.Pages"
                 mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="" FontFamily="Century Gothic" >

    <Grid>
        <Grid Margin="10" Background="White">
            <Label Content="Авторизация" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,10" Width="145"/>
            <Label Content="Введите логин:" Margin="91,45,91,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <TextBox x:Name="TbLogin" Height="25" Margin="15,77,15,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244"/>
            <Label Content="Введите пароль:" Margin="87,107,87,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="TbPassword" Margin="15,138,15,0" VerticalAlignment="Top" Height="25" Width="244"/>
            <Button x:Name="Enter" Content="Войти" Click="OpenGeneral" Margin="318,0,318,22" Background="#0060AC" Foreground="White" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="144"/>
        </Grid>
    </Grid>
</Page>